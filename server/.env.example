# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/teen_sunday_school

# Redis (for Bull job queue)
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production
REFRESH_TOKEN_EXPIRY=7d

# Encryption (for storing OAuth credentials)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-change-in-production

# Planning Center OAuth
# Get these from: https://api.planningcenteronline.com/oauth/applications
PLANNING_CENTER_CLIENT_ID=your-planning-center-client-id
PLANNING_CENTER_CLIENT_SECRET=your-planning-center-client-secret
PLANNING_CENTER_REDIRECT_URI=http://localhost:3001/api/integrations/planning-center/callback

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Email (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@teen-sunday-school.com
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Teen Sunday School

# Bulk Import Settings
MAX_IMPORT_ROWS=1000
MAX_FILE_SIZE_MB=5

# Sequelize Database (for bulk import feature)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=teen_sunday_school
DB_USER=postgres
DB_PASSWORD=your_password_here
